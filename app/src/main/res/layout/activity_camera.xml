<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/cameraPreviewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.facecoders.facecode.activities.CameraActivity"></FrameLayout>


    <ImageView
        android:id="@+id/toAnalyzeImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraPreviewFrameLayout" />

    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraPreviewFrameLayout" />


    <ImageView
        android:id="@+id/barsBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#009E1414"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreviewFrameLayout"
        app:srcCompat="@drawable/bar" />

    <ImageButton
        android:id="@+id/changeCameraImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/barsBackground"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreviewFrameLayout"
        app:srcCompat="@drawable/change_cam_background" />

    <ProgressBar
        android:id="@+id/emotion1ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
        app:layout_constraintStart_toEndOf="@+id/emotion1TextView"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreviewFrameLayout" />

    <ProgressBar
        android:id="@+id/emotion2ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progress="30"
        app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
        app:layout_constraintStart_toEndOf="@+id/emotion2TextView"
        app:layout_constraintTop_toBottomOf="@+id/emotion1ProgressBar" />

    <ProgressBar
        android:id="@+id/emotion3ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progress="20"
        app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
        app:layout_constraintStart_toEndOf="@+id/emotion3TextView"
        app:layout_constraintTop_toBottomOf="@+id/emotion2ProgressBar" />

    <TextView
        android:id="@+id/emotion1TextView"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreviewFrameLayout" />

    <TextView
        android:id="@+id/emotion2TextView"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotion1TextView" />

    <TextView
        android:id="@+id/emotion3TextView"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotion2TextView" />

</android.support.constraint.ConstraintLayout>
