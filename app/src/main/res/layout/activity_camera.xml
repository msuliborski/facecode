<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/autisticBlue"
    tools:context=".MainActivity">

    <!--android:id="@+id/cameraPreviewFrameLayout"-->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cameraConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/cameraPreviewFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.facecoders.facecode.activities.RealtimeActivity" />

        <ImageView
            android:id="@+id/viewImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cameraPreviewFrameLayout" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/outputConstraintLayout"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="@color/autisticBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraConstraintLayout">

        <ProgressBar
            android:id="@+id/emotion2ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="30"
            android:progressTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
            app:layout_constraintStart_toEndOf="@+id/emotion2TextView"
            app:layout_constraintTop_toBottomOf="@+id/emotion1ProgressBar" />

        <ProgressBar
            android:id="@+id/emotion3ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="20"
            android:progressTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
            app:layout_constraintStart_toEndOf="@+id/emotion3TextView"
            app:layout_constraintTop_toBottomOf="@+id/emotion2ProgressBar" />

        <ProgressBar
            android:id="@+id/emotion1ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/changeCameraImageButton"
            app:layout_constraintStart_toEndOf="@+id/emotion1TextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emotion2TextView"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="123"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emotion1TextView" />

        <TextView
            android:id="@+id/emotion1TextView"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="123"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emotion3TextView"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="123"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emotion2TextView" />

        <ImageButton
            android:id="@+id/changeCameraImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/change_cam_background" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
