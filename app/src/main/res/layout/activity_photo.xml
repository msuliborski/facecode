<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D2D2">

    <FrameLayout
        android:id="@+id/cameraPreviewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.facecoders.facecode.MainActivity">

    </FrameLayout>

    <ImageButton
        android:id="@+id/takePhotoImageButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/cameraPreviewFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/photo_icon" />

    <ImageButton
        android:id="@+id/pickFromGalleryImageButton"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/takePhotoImageButton"
        app:layout_constraintEnd_toStartOf="@+id/takePhotoImageButton"
        app:layout_constraintStart_toStartOf="@+id/cameraPreviewFrameLayout"
        app:layout_constraintTop_toTopOf="@+id/takePhotoImageButton"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/change_camera" />

    <ImageButton
        android:id="@+id/switchCameraImageButton"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/takePhotoImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/takePhotoImageButton"
        app:layout_constraintTop_toTopOf="@+id/takePhotoImageButton"
        app:srcCompat="@drawable/change_camera" />
</android.support.constraint.ConstraintLayout>